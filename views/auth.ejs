<!DOCTYPE html>
<html>
    <head>
        <title>Login Page</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body onload="startFix()" onresize="startFix()">
        <div id="main" class="d-flex justify-content-center align-items-center vh-100 bg-light">
            <div id="forms" class="position-relative bg-white rounded d-flex overflow-hidden" style="height: 450px; width: 750px;">
                <form action="/signup" id="signinForm" method="post" class="d-flex flex-column justify-content-around align-items-center" style="width: 50%;">
                    <h1>Sign Up</h1>
                    <div id="signinDiv" class="d-flex flex-column align-items-center w-100 p-3">
                        <input type="text" name="username" id="username" class="form-control mb-2" placeholder="Name">
                        <input type="password" name="password" id="password" class="form-control mb-2" placeholder="Password">
                        <input type="submit" value="Sign Up" id="signin" class="btn btn-warning btn-lg font-weight-bold">
                        <p>Already have an account? <a href="#" onclick="loginFun()">Login</a></p>
                    </div>
                </form>
                <form action="/login" id="loginForm" method="post" class="d-flex flex-column justify-content-around align-items-center position-absolute" style="top: -100%; right: 0; width: 50%;">
                    <h1 class="mb-4">Login</h1>
                    <div id="loginDiv" class="d-flex flex-column align-items-center w-100 p-3">
                        <input type="text" name="username" id="loginUsername" class="form-control mb-2 mt-4" placeholder="Name">
                        <input type="password" name="password" id="loginPassword" class="form-control mb-2" placeholder="Password">
                        <input type="submit" value="Login" id="loginSubmit" class="btn btn-warning btn-lg font-weight-bold">
                        <p>Don't have an account? <a href="#" onclick="signinFun()">Sign Up</a></p>
                    </div>
                </form>
                <div id="cover" class="d-flex flex-column justify-content-center align-items-center position-absolute bg-warning" style="right: 0; height: 100%; width: 50%; overflow: hidden;">
                    <div id="helper" class="d-flex flex-column justify-content-center align-items-center position-relative w-100 h-100">
                        <div id="signupmsg" class="position-absolute">
                            <h1>SIGN UP</h1>
                            <h1>FOR</h1>
                            <h1>MORE</h1>
                        </div>
                        <div id="loginmsg" class="position-absolute text-right" style="left: -150%; opacity: 0;">
                            <h1>LOGIN</h1>
                            <h1>FOR</h1>
                            <h1>MORE</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
        <script>
            function loginFun() {
                gsap.to("#cover", { x: -380, duration: 0.7 });
                gsap.to("#signupmsg", { x: 600, duration: 0.7, opacity: 0 });
                gsap.to("#loginmsg", { x: 640, duration: 0.7, opacity: 1 });
                gsap.to("#signinForm", { y: -450, opacity: 0, duration: 0.7 });
                gsap.to("#loginForm", { y: 550, opacity: 1, duration: 0.7 });
            }
            function signinFun() {
                gsap.to("#cover", { x: 0, duration: 0.7 });
                gsap.to("#signupmsg", { x: 0, duration: 0.7, opacity: 1 });
                gsap.to("#loginmsg", { x: 0, duration: 0.7, opacity: 0 });
                gsap.to("#signinForm", { y: 0, opacity: 1, duration: 0.7 });
                gsap.to("#loginForm", { y: 0, opacity: 0, duration: 0.7 });
            }
            function startFix(){
                const windowW = window.innerWidth;
                if(windowW < 650){
                    document.getElementById('cover').style.top = '-200%';
                    document.getElementById('signinForm').style.width = '100%';
                    document.getElementById('loginForm').style.width = '100%';
                } else {
                    document.getElementById('cover').style.top = '0%';
                    document.getElementById('signinForm').style.width = '50%';
                    document.getElementById('loginForm').style.width = '50%';
                }
            }
        </script>
    </body>
</html>
